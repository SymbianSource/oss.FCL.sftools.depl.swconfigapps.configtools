<?eclipse version="3.2"?>
<plugin>
   <extension-point id="com.nokia.tools.variant.editor.widget" name="Editor Widget" schema="schema/com.nokia.tools.variant.editor.widget.exsd"/>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.nokia.tools.variant.editor.editors.CPFEditor"
            contributorClass="com.nokia.tools.variant.editor.actionbars.CPFEditorActionBarContributor"
            default="true"
            extensions="cpf"
            icon="icons/cpf_16_lib.png"
            id="com.nokia.tools.variant.editor.editors.CPFEditor"
            name="CPF Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.nokia.tools.variant.editor.actionSet1"
            label="label"
            visible="true">
         <action
               class="com.nokia.tools.variant.editor.actions.OpenCpfAction"
               icon="icons/open.png"
               id="com.nokia.tools.variant.editor.opencpf"
               label="Open ..."
               menubarPath="rcpFile/open.ext"
               style="push"
               toolbarPath="rcpMain/open.ext"
               tooltip="Open cpf">
         </action>
